{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "title": "Witcher 3 Mod Config Schema",
    "properties": {
        "mod.name": {
            "$id": "/properties/mod.name",
            "type": "string",
            "title": "The mod name.",
            "default": "",
            "examples": [
                "modWitcherImproved"
            ]
        },
        "mod.isDLC": {
            "$id": "/properties/mod.isDLC",
            "type": "boolean",
            "title": "Specifies if the mod is a DLC.",
            "default": false,
            "examples": [
                false
            ]
        },
        "cook.useLocalDepot": {
            "$id": "/properties/cook.useLocalDepot",
            "type": "boolean",
            "title": "Specifies if should use local depot for cooking.",
            "default": false,
            "examples": [
                false
            ]
        },
        "cook.skipErrors": {
            "$id": "/properties/cook.skipErrors",
            "type": "boolean",
            "title": "Specifies if should skip errors during cooking.",
            "default": false,
            "examples": [
                false
            ]
        }
    }
}